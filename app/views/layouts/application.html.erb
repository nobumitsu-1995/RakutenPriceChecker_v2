<!DOCTYPE html>
<html>
  <head>
    <title>RakutenPriceCheckerV2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <%= link_to_if logged_in?, "RPC", root_path, class: "navbar-brand" %>
          <% if logged_in? %>
            <ul class="navbar-nav">
              <li class="nav-item">
                <span class="navbar-text"><%= current_user.name %></span>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", logout_path, method: :delete, class: "nav-link" %>
              </li>
            </ul>
          <% end %>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
